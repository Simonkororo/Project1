    <script>
        $(document).ready(function () {
            let debounceTimeout;

            $('#search_input').on('input', function () {
                clearTimeout(debounceTimeout); // 清除之前的定时器

                var searchTerm = $(this).val().trim(); // 获取输入框的值

                // 如果输入框的值为空，则隐藏搜索结果下拉框
                if (searchTerm === '') {
                    $('#search_results_container').html('').hide();
                    return;
                }
                debounceTimeout = setTimeout(function () {
                    var url = "https://localhost:7177/Home/Searchtrainers";
                    // 向服务器发送异步请求
                    axios.get(url, { params: { searchTerm: searchTerm } }).then(response => {
                        $('#search_results_container').html(response.data).show();
                    }).catch(error => {
                        alert(error);
                    });
                }, 200); // 设置延迟时间，比如 300 毫秒
            });

            $(document).on('click', '.course_btn', function (event) {
                const btn = event.target;
                const courseId = btn.getAttribute("btn-id");
                sessionStorage.setItem("ActID", courseId);
            });
        });


