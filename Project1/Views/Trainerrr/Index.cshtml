@model IEnumerable<Project1.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <a asp-action="Create" class="btn btn-success">新增課程</a>
    <!-- 搜尋表單 -->
    <form asp-controller="Trainerrr" asp-action="Index" method="get">
        <div class="form-group">
            <input type="text" id="searchInput" class="form-control" name="searchString" placeholder="輸入關鍵字搜尋">
        </div>
        <button type="submit" class="btn btn-primary">搜尋</button>
    </form>

    <!-- 搜尋結果顯示區域 -->
    <div id="searchResult" class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <!-- 顯示課程封面圖的部分視圖 -->
                            <div style="max-width:100%; max-height:100%;">
                                <partial name="_ShowPicturePartialView" model="@item" />
                            </div>
                        </div>
                        <div>
                            <!-- 課程名稱和描述 -->
                            <h5 class="card-title mt-3">@item.CourseName</h5>
                            <p class="card-text">@item.Description</p>
                        </div>
                        <div>
                            <!-- 操作按鈕組 -->
                            <div class="btn-group mt-3" role="group">
                                <a href="@Url.Action("Details", new { id = item.CourseID })" class="btn btn-primary mr-2">查看</a>
                                <a href="@Url.Action("Edit", new { id = item.CourseID })" class="btn btn-secondary mr-2">編輯</a>
                                <form asp-action="Delete" asp-route-id="@item.CourseID">
                                    <button type="submit" class="btn btn-danger">刪除</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
