@model IEnumerable<Project1.Models.Course>

@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">   
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <div style="max-width:100%; max-height:100%;">
                                <img src="@item.ThumbnailUrl" class="card-img-top img-fluid" alt="Course Thumbnail" style="object-fit: cover;">
                            </div>
                        </div>
                        <div>
                            <h5 class="card-title mt-3">@item.CourseName</h5>
                            <p class="card-text">@item.Description</p>
                        </div>
                        <div>
                            <div class="btn-group mt-3" role="group">
                                <a href="@Url.Action("Details", new { id = item.CourseID })" class="btn btn-primary mr-2">查看</a>
                                <a href="@Url.Action("Edit", new { id = item.CourseID })" class="btn btn-secondary mr-2">编辑</a>
                                <form asp-action="Delete" asp-route-id="@item.CourseID">
                                    <button type="submit" class="btn btn-danger">删除</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>