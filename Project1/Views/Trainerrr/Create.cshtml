@model Project1.Models.Course

@{
    ViewData["Title"] = "Create";
}

<h1>課程新增</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <!-- 課程新增表單 -->
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <!-- 驗證錯誤信息 -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- 課程名稱 -->
            <div class="form-group">
                <label asp-for="CourseName" class="control-label"></label>
                <input asp-for="CourseName" class="form-control" />
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>

            <!-- 訓練師ID -->
            <div class="form-group">
                <label asp-for="TrainerID" class="control-label"></label>
                <input asp-for="TrainerID" class="form-control" />
                <span asp-validation-for="TrainerID" class="text-danger"></span>
            </div>
@*             <div class="form-group">
                <label asp-for="PetCategory" class="control-label"></label>
                <input asp-for="PetCategory" class="form-control" />
                <span asp-validation-for="PetCategory" class="text-danger"></span>
            </div> *@
@*             <div class="form-group">
                <label asp-for="CourseCategory" class="control-label"></label>
                <input asp-for="CourseCategory" class="form-control" />
                <span asp-validation-for="CourseCategory" class="text-danger"></span>
            </div> *@
@*             <div class="form-group">
                <label asp-for="CourseType" class="control-label"></label>
                <input asp-for="CourseType" class="form-control" />
                <span asp-validation-for="CourseType" class="text-danger"></span>
            </div *@>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- 價格 -->
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- 上課地點 -->
            <div class="form-group">
                <label asp-for="LocationID" class="control-label"></label>
                <select asp-for="LocationID" class="form-control" asp-items="ViewBag.LocationID"></select>
                <span asp-validation-for="LocationID" class="text-danger"></span>
            </div>

            <!-- 人數上限 -->
            <div class="form-group">
                <label asp-for="MaxParticipants" class="control-label"></label>
                <input asp-for="MaxParticipants" class="form-control" />
                <span asp-validation-for="MaxParticipants" class="text-danger"></span>
            </div>

            <!-- 縮略圖上傳 -->
            <div class="form-group">
                <label asp-for="ThumbnailUrl" class="control-label"></label>
                <input type="file" id="thumbnailFile" name="thumbnailFile" class="form-control" accept="image/*" />
                <span asp-validation-for="ThumbnailUrl" class="text-danger"></span>
            </div>

            <!-- 新增按鈕 -->
            <div class="form-group">
                <input type="submit" value="新增" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<!-- 返回課程首頁的連結 -->
<div>
    <a asp-action="Index">返回課程首頁</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
