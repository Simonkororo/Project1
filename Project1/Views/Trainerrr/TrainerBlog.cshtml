@model TrainerBlogViewModel

@section Styles {
    <style>
        .trainer-info {
            text-align: center;
            border: 1px solid #ddd;
            padding: 20px;
            border-radius: 8px;
        }

        .trainer-blogs {
            border: 1px solid #ddd;
            padding: 20px;
            border-radius: 8px;
        }

        .blog-post {
            margin-bottom: 15px;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

            .blog-post .card-header {
                background-color: #fff;
                border-bottom: 1px solid #ddd;
                flex-shrink: 0;
            }

            .blog-post .card-body {
                flex-grow: 1;
                overflow-y: auto;
                padding: 20px;
                display: flex;
                flex-direction: column;
            }

            .blog-post .blog-img {
                flex-grow: 0;
                max-height: 50%;
                object-fit: cover;
                width: 100%;
                height: auto;
            }

        .course-card {
            text-align: center;
        }

        .carousel-control-prev, .carousel-control-next {
            width: 5%;
        }


    </style>

}

<div class="container mt-4">
    <div class="row">
        <!-- 第一區塊：訓練師資訊 -->
        <div class="col-md-4">
            <div class="trainer-info">
                <img src="@Model.Trainer.Photo" class="img-fluid mb-3" alt="Trainer Photo" />
                <h2>@Model.Trainer.TrainerName</h2>
                <p><strong>經歷:</strong> @Model.Trainer.Experience</p>
                <p><strong>資格:</strong> @Model.Trainer.Qualifications</p>
            </div>
        </div>

        <!-- 第二區塊：訓練師部落格貼文 -->
        <div class="col-md-8">
            <div class="trainer-blogs mb-4">
                <h3>部落格貼文</h3>
                @foreach (var blog in Model.Blogs)
                {
                    <div class="blog-post mb-4 card" style="width: 590px; height: 701px;">
                        <div class="card-header d-flex justify-content-between">
                            <div class="d-flex align-items-center">
                                <img src="@Model.Trainer.Photo" class="rounded-circle mr-2" style="width: 50px; height: 50px;" alt="Trainer Photo" />
                                <div>
                                    <h5 class="card-title mb-0">@Model.Trainer.TrainerName</h5>
                                    <small class="text-muted">@blog.PostedDate.ToString("yyyy-MM-dd")</small>
                                </div>
                            </div>
                            <div>
                                <button class="btn btn-danger btn-sm">隱藏</button>
                            </div>
                        </div>
                        <div class="card-body">
                            <h4 class="card-title">@blog.Title</h4>
                            <p class="card-text">@blog.Content</p>
                            @if (!string.IsNullOrEmpty(blog.Image1))
                            {
                                <img src="@blog.Image1" class="img-fluid mb-3 blog-img" alt="Blog Image 1" />
                            }
                            @if (!string.IsNullOrEmpty(blog.Image2))
                            {
                                <img src="@blog.Image2" class="img-fluid mb-3 blog-img" alt="Blog Image 2" />
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <!-- 第三區塊：課程 -->
    <div class="row">
        <div class="col-md-12">
            <div class="trainer-courses">
                <h3>發佈的課程</h3>
                <div id="courseCarousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.Courses.Count; i += 3)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <div class="row">
                                    @for (int j = 0; j < 3 && i + j < Model.Courses.Count; j++)
                                    {
                                        var course = Model.Courses[i + j];
                                        <div class="col-md-4">
                                            <div class="course-card card mb-4 shadow-sm">
                                                <img class="card-img-top" src="@course.ThumbnailUrl" alt="Course image">
                                                <div class="card-body">
                                                    <h5 class="card-title">@course.CourseName</h5>
                                                    <p class="card-text">@course.Description</p>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                    <a class="carousel-control-prev" href="#courseCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#courseCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


