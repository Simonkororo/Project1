@model IEnumerable<CourseRanking>

@{
    ViewData["Title"] = "Home Page";
}

@section Styles{
   <style>
       thead{
           background-color: darkblue;
           color: white;
       }
   </style>
}

<div class="col-lg-12">
    <table id="CourseRanking-table" class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CourseID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TrainerID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseAverageRating)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model){
                <tr>
                    <th>
                        @Html.DisplayFor(modelitem => item.CourseID)
                    </th>
                    <th>
                        @Html.DisplayFor(modelitem => item.TrainerID)
                    </th>
                    <th>
                        @Html.DisplayFor(modelitem => item.CourseAverageRating)
                    </th>
                    <th>
                        @Html.DisplayFor(modelitem => item.Date);
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>
