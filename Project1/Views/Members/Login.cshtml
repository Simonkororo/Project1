@model LoginViewModel
<form asp-controller="Members" asp-action="Login">
    <div class="container" style="width:50%">
        <div class="form-group">
            <label asp-for="Name" class="form-label"></label>
            <input type="text" asp-for="Name" class="form-control"></input>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="form-label"></label>
            <input type="text" asp-for="Email" class="form-control"></input>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Phone" class="form-label"></label>
            <input type="text" asp-for="Phone" class="form-control"></input>
            <span asp-validation-for="Phone" class="text-danger"></span>

        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">送出</button></br>
            <span>@ViewBag.failLogin</span>
        </div>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}