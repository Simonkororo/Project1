@model Order
<form>
    <div class="p-3 mt-4">
        <div class="row pb-2">
            <h2>Create New Order</h2>
        </div>
    </div>
    <div asp-validation-summary="All"></div>
    <div class="mb-3 row p-1">
        <label asp-for="OrderID" class="p-0"></label>
        <input asp-for="OrderID" type="text" class="form-control" />
        <span asp-validation-for="OrderID" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="MemberID" class="p-0"></label>
        <input asp-for="MemberID" type="text" class="form-control" />
        <span asp-validation-for="MemberID" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="OrderDate" class="p-0"></label>
        <input asp-for="OrderDate" type="text" class="form-control" />
        <span asp-validation-for="OrderDate" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="OrderStatus" class="p-0"></label>
        <input asp-for="OrderStatus" type="text" class="form-control" />
        <span asp-validation-for="OrderStatus" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="TotalAmount" class="p-0"></label>
        <input asp-for="TotalAmount" type="text" class="form-control" />
        <span asp-validation-for="TotalAmount" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="CreatedAt" class="p-0"></label>
        <input asp-for="CreatedAt" type="text" class="form-control" />
        <span asp-validation-for="CreatedAt" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="ModifiedAt" class="p-0"></label>
        <input asp-for="ModifiedAt" type="text" class="form-control" />
        <span asp-validation-for="ModifiedAt" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-primary form-control">Create</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Order" asp-action="Index" class="btn btn-outline-secondary form-control">
                Back to list
            </a>
        </div>
    </div>


</form>
