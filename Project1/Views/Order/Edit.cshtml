@model Order

@{
    ViewData["Title"] = "Edit";
}

<form asp-controller="Order" asp-action="Edit" method="post">
    <input asp-for="OrderID" hidden />
    <div class="p-3 mt-4">
        <div class="row pb-2">
            <h2>修改訂單明細</h2>
        </div>
    </div>
    <div asp-validation-summary="ModelOnly"></div>
    <div class="mb-3 row p-1">
        <label asp-for="OrderID" class="p-0" disabled>訂單編號</label>
    <input asp-for="OrderID" type="text" class="form-control" disabled/>
    <span asp-validation-for="OrderID" class="text-danger" ></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="MemberID" class="p-0 control-label">會員編號</label>
        <input asp-for="MemberID" type="text" class="form-control" />
        <span asp-validation-for="MemberID" class="text-danger"></span>
    </div>
    @* <div class="mb-3 row p-1">
    <label asp-for="OrderDate" class="p-0"></label>
    <input asp-for="OrderDate" type="text" class="form-control" />
    <span asp-validation-for="OrderDate" class="text-danger"></span>
    </div> *@
    <div class="mb-3 row p-1">
        <div>
            <label asp-for="OrderDate" class="pr-3">訂單日期</label>
        </div>
        <div>
            <input asp-for="OrderDate" type="date" class="form-control" />
            <span asp-validation-for="OrderDate" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3 row p-1">
        <div>
            <label asp-for="OrderStatus" class="pr-3">訂單狀態</label>
        </div>
        <div>
            <select asp-for="OrderStatus" class="form-control pl-3 pr-4">
                <option value="未付款">未付款</option>
                <option value="已付款">已付款</option>
            </select>
            <span asp-validation-for="OrderStatus" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row p-1">
        <label asp-for="TotalAmount" class="p-0">總額</label>
        <input asp-for="TotalAmount" type="text" class="form-control" />
        <span asp-validation-for="TotalAmount" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="CreatedAt" class="p-0">訂單創立日期</label>
    <input asp-for="CreatedAt" type="text" class="form-control" />
    <span asp-validation-for="CreatedAt" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="ModifiedAt" class="p-0">訂單修改日期</label>
    <input asp-for="ModifiedAt" type="text" class="form-control" disabled/>
    <span asp-validation-for="ModifiedAt" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-outline-dark form-control">儲存</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Order" asp-action="Index" class="btn btn-outline-secondary form-control">
                返回
            </a>
        </div>
    </div>


</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
