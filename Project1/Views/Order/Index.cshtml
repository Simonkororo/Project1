@model List<Order>


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-heading">訂單管理後台</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" asp-controller="Order" class="btn btn-outline-dark">
                <i class="bi bi-plus-circle"></i> 建立新訂單
            </a>
        </div>
    </div>
</div>
<table class="table table-hover table-striped table-bordered">
    <thead>
        <tr>
            <th>
                訂單編號
            </th>
            <th>
                會員編號
            </th>
            <th>
                訂單日期
            </th>
            <th>
                付款狀態
            </th>
            <th>
                總額
            </th>
            <th>
                訂單創立日期
            </th>
            <th>
                訂單修改日期
            </th>
            <th>
                訂單管理
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>
                    @order.OrderID
                </td>
                <td>
                    @order.MemberID
                </td>
                <td>
                    @order.OrderDate
                </td>
                <td>
                    @order.OrderStatus
                </td>
                <td>
                    @order.TotalAmount
                </td>
                <td>
                    @order.CreatedAt
                </td>
                <td>
                    @order.ModifiedAt
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-action="ViewDetails" asp-controller="Order" asp-route-id="@order.OrderID" class="genric-btn default mx-1 px-2">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-action="Edit" asp-controller="Order" asp-route-id="@order.OrderID" class="genric-btn default mx-1 px-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Delete" asp-controller="Order" asp-route-id="@order.OrderID" class="genric-btn default mx-1 px-2">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                   
                </td>
            </tr>
        }
    </tbody>
</table>