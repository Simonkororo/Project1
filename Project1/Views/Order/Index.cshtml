@model List<Order>


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-heading">Order List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" asp-controller="Order" class="btn btn-outline-dark">
                <i class="bi bi-plus-circle"></i> Create New Order
            </a>
        </div>
    </div>
</div>
<table class="table table-hover table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Order ID
            </th>
            <th>
                Member ID
            </th>
            <th>
                OrderDate
            </th>
            <th>
                OrderStatus
            </th>
            <th>
                TotalAmount
            </th>
            <th>
                CreatedAt
            </th>
            <th>
                ModifiedAt
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>
                    @order.OrderID
                </td>
                <td>
                    @order.MemberID
                </td>
                <td>
                    @order.OrderDate
                </td>
                <td>
                    @order.OrderStatus
                </td>
                <td>
                    @order.TotalAmount
                </td>
                <td>
                    @order.CreatedAt
                </td>
                <td>
                    @order.ModifiedAt
                </td>
                <td>
                    <a asp-action="Read" asp-controller="Order" class="genric-btn primary-border px-3">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a asp-action="Update" asp-controller="Order" class="genric-btn primary-border px-3">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Delete" asp-controller="Order" class="genric-btn primary-border px-3">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>