@model Project1.Models.Course

@{
    ViewData["Title"] = "Delete";
}

<h1>課程刪除</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            課程名字
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseName)
        </dd>

        <dt class="col-sm-2">
            寵物品種
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PetCategory)
        </dd>

        <dt class="col-sm-2">
            課程分類
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseCategory)
        </dd>

        <dt class="col-sm-2">
            課程類型
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseType)
        </dd>

        <dt class="col-sm-2">
            課程描述
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="col-sm-2">
            價格
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt class="col-sm-2">
            折扣編號
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiscountID)
        </dd>

        <dt class="col-sm-2">
            上課地點
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>

        <dt class="col-sm-2">
            人數上限
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaxParticipants)
        </dd>

        <dt class="col-sm-2">
            課程時間
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>

        <dt class="col-sm-2">
            最後報名時間
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>

        <dt class="col-sm-2">
            點擊次數
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Clicks)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="CourseID" />
        <input type="submit" value="刪除" class="btn btn-danger" asp-action="Index" />
        <a asp-action="Index">返回課程首頁</a>
    </form>
</div>